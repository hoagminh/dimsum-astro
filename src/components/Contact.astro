---
import { Trans } from "astro-i18next/components";
import {t} from "i18next"

---
<section id="contact" class="pt-28">
    <div class="container mx-auto px-3">
        <div class="flex flex-col md:flex-row">
            <div class="text-white md:mt-52 md:w-[50%]">
                <h2 class="text-4xl md:text-5xl font-black">
                    <Trans i18nKey="contact.title">
                        It Will Be <span class="text-red-500">Very Easy</span> To <span class="text-yellow-500">Order</span> Through <span class="text-red-500">The App</span>
                    </Trans>
                </h2>
                <p class="mt-5 md:mt-10 md:max-w-[70%] font-poppins">{t("contact.des")}</p>
                <div class="flex gap-7 mt-8">
                    <button type="button" class="bg-white rounded-full md:rounded-2xl border-4 border-gray-400 px-5 py-1">
                        <a href="#" class="flex gap-2">
                            <img src="/assets/images/icons/chplay.svg" alt="googleplay" class="w-6 lg:w-8">
                            <div class="text-justify font-medium text-black">
                                <span class="text-xs">GET IT ON</span> <br/>
                                <span class="text-base lg:text-xl">Google Play</span>
                            </div>
                        </a>
                    </button>
                    <button type="button" class="bg-white rounded-full md:rounded-2xl border-4 border-gray-400 px-5 py-1">
                        <a href="#" class="flex gap-2">
                            <img src="/assets/images/icons/apple.svg" alt="apple" class="w-6 lg:w-8">
                            <div class="text-justify font-medium text-black">
                                <span class="text-xs">Download on the</span> <br/>
                                <span class="text-base lg:text-xl">App Store</span>
                            </div>
                        </a>
                    </button>
                </div>
            </div>

            <div>
                <img src="/assets/images/background/human.png" alt="">
            </div>
        </div>
    </div>
</section>